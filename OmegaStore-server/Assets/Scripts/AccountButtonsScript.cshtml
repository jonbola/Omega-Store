<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var accountEditButtons = document.querySelectorAll(".account-edit-btn");
        var accountDeleteButtons = document.querySelectorAll(".account-delete-btn");

        accountEditButtons.forEach(function (btn) {
            btn.addEventListener("click", function (event) {
                var isEditable = btn.getAttribute("data-editable") === "True";
                if (!isEditable) {
                    event.preventDefault();
                    Swal.fire({
                        title: "System's Message",
                        text: "This account cannot be edited.",
                        confirmButtonText: "Back"
                    });
                }
            });
        });
        accountDeleteButtons.forEach(function (btn) {
            btn.addEventListener("click", function (event) {
                var isDeletable = btn.getAttribute("data-deletable") === "True";
                if (!isDeletable) {
                    event.preventDefault();
                    Swal.fire({
                        title: "System's Message",
                        text: "This account cannot be deleted.",
                        confirmButtonText: "Back"
                    });
                }
            });
        });
    });
</script>