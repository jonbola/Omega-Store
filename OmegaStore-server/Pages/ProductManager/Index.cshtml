@page
@model OmegaStore_server.Pages_ProductManager.IndexModel

@{
    ViewData["Title"] = "Product Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<br>
<form style="display: flex; flex-direction: row;">
    <h4 style="flex: 1;">Search:</h4>
    <input type="text" asp-for="SearchString" class="form-control" style="flex: 4;">
    <span style="flex: 5;"></span>
</form>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].WarrantyPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Manufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)$
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @(item.WarrantyPeriod == null ? "" : item.WarrantyPeriod + " " + (item.WarrantyPeriod <= 1 ? "month"
                                    : "months"))
            </td>
            <td>
                @item.Category?.Name
            </td>
            <td>
                @item.Manufacturer?.Name
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
                }
    </tbody>
</table>