@page
@model OmegaStore_server.Pages_ManufacturerManager.DetailsModel

@{
    ViewData["Title"] = "Manufacturer Detail";
}

<h1>Details</h1>

<div>
    <h4>Manufacturer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Address)
        </dd>
    </dl>
    <h4>Product List</h4>
    <hr />
    <select class="form-control" multiple="true">
        @if (Model.Manufacturer.Products != null)
        {
            foreach (var product in Model.Manufacturer.Products)
            {
                <option value="@product.Id" ondblclick="RedirectToProductDetailPage(@product.Id)">
                    @product.Name
                </option>
            }
        }
    </select>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Manufacturer.Id">Edit</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Manufacturer.Id">Delete</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<script>
    function RedirectToProductDetailPage(productId) {
        window.location.href = "/ProductManager/Details/?id=" + productId;
    }
</script>