@page
@model OmegaStore_server.Pages_AccountManager.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.AccountName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.AccountName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Role)
        </dt>
        <dd class="col-sm-10">
            @(Model.Account.Role?"Admin":"Customer")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Editable)
        </dt>
        <dd class="col-sm-10">
            @(Model.Account.Editable?"Yes":"No")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Deletable)
        </dt>
        <dd class="col-sm-10">
            @(Model.Account.Deletable?"Yes":"No")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.CreatedDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Account.Id" data-editable="@Model.Account.Editable" class="edit-btn">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var editButtons = document.querySelectorAll(".edit-btn");
            var deleteButtons = document.querySelectorAll(".delete-btn");

            editButtons.forEach(function (btn) {
                btn.addEventListener("click", function (event) {
                    var isEditable = btn.getAttribute("data-editable") === "True";
                    if (!isEditable) {
                        event.preventDefault();
                        alert("This account cannot be edited.");
                    }
                });
            });
        });
    </script>
}