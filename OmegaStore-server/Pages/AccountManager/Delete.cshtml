@page
@model OmegaStore_server.Pages_AccountManager.DeleteModel

@{
    ViewData["Title"] = "Delete Account";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.AccountName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.AccountName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Role)
        </dt>
        <dd class="col-sm-10">
            @(Model.Account.Role ? "Admin" : "Customer")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Editable)
        </dt>
        <dd class="col-sm-10">
            @(Model.Account.Editable ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Deletable)
        </dt>
        <dd class="col-sm-10">
            @(Model.Account.Deletable ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.CreatedDate)
        </dd>
    </dl>
    <h4>Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountInfo.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountInfo.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountInfo.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountInfo.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountInfo.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountInfo.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountInfo.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountInfo.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountInfo.Gender)
        </dt>
        <dd class="col-sm-10">
            @GetTextList.GetGenderText(Model.AccountInfo.Gender ?? "")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountInfo.Nation)
        </dt>
        <dd class="col-sm-10">
            @GetTextList.GetNationText(Model.AccountInfo.Nation ?? "")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountInfo.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountInfo.BirthDate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Account.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>