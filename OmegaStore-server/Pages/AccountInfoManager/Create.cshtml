@page
@model OmegaStore_server.Pages_AccountInfoManager.CreateModel

@{
    ViewData["Title"] = "Create Account Info";
}

<h1>Create</h1>

<h4>Account Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountInfo.FirstName" class="control-label"></label>
                <input asp-for="AccountInfo.FirstName" class="form-control" />
                <span asp-validation-for="AccountInfo.FirstName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AccountInfo.LastName" class="control-label"></label>
                <input asp-for="AccountInfo.LastName" class="form-control" />
                <span asp-validation-for="AccountInfo.LastName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AccountInfo.AvatarImage" class="control-label"></label>
                <input asp-for="AccountInfo.AvatarImage" class="form-control" />
                <span asp-validation-for="AccountInfo.AvatarImage" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AccountInfo.Email" class="control-label"></label>
                <input asp-for="AccountInfo.Email" class="form-control" />
                <span asp-validation-for="AccountInfo.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AccountInfo.PhoneNumber" class="control-label"></label>
                <input asp-for="AccountInfo.PhoneNumber" class="form-control" />
                <span asp-validation-for="AccountInfo.PhoneNumber" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AccountInfo.Gender" class="control-label"></label>
                <select asp-for="AccountInfo.Gender" class="form-control select2"
                    asp-items="@Model.SelectGenderList"></select>
                <span asp-validation-for="AccountInfo.Gender" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AccountInfo.Nation" class="control-label"></label>
                <select asp-for="AccountInfo.Nation" class="form-control select2"
                    asp-items="@Model.SelectNationList"></select>
                <span asp-validation-for="AccountInfo.Nation" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AccountInfo.BirthDate" class="control-label"></label>
                <input asp-for="AccountInfo.BirthDate" class="form-control" />
                <span asp-validation-for="AccountInfo.BirthDate" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AccountInfo.AccountId" class="control-label"></label>
                <input asp-for="AccountInfo.AccountId" class="form-control" value="@Model.AccountInfo.AccountId"
                    readonly />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-page="/AccountManager/Index">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @await Html.PartialAsync("~/Assets/Scripts/Select2Script.cshtml")
}